doctype html
html(lang="ko")
    head
        title #{pageTitle} | Health in
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")
        link(rel="stylesheet", href="/frontend/css/style.css")
        script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js")
    body
        script.
            document.addEventListener('DOMContentLoaded', function() {
                if("#{messages.error}") {
                    Swal.fire({
                        icon: 'error',
                        title: '로그인 필요',
                        text: "#{messages.error}",
                    });
                }
            });

        div.login
            div.login-title
                a(href="/")
                    img(src="/image/logo.jpg")
            div.login-form
                form(method="POST")
                    if userIdErrorMessage
                        span.login-error-message #{userIdErrorMessage}
                    input.login_form_box(name="userId", type="text", placeholder="아이디", required)
                    if userPwErrorMessage
                        span.login-error-message #{userPwErrorMessage}
                    input.login_form_box(name="userPw", type="password", placeholder="비밀번호", required)
                    input.login_form_botton(type="submit", value="로그인")
                    div.login-form-join
                        a(href="/join") 회원가입
